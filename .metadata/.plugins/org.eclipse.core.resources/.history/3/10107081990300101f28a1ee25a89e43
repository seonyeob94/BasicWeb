<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel ="stylesheet" href="../css/public.css">

<script type="text/javascript">
const proc1 = () =>{
	dan = prompt("구구단 입력", "2~99")
	let res="";
	for(let i=1; i<10;i++){
		res += `${dan} * ${i} =${dan*i}<br>`
	}
	//id=result1 검색 - 출력
	document.getElementById('result1').innerHTML = res;
}

const proc2 = () =>{
		let res="";
	while(true){
		dan = prompt("구구단 입력", "2~99")
		for(let i=1; i<10;i++){
			res += `${dan} * ${i} =${dan*i}<br>`
		}
		//id=result1 검색 - 출력
		document.getElementById('result2').innerHTML = res;
		
		//계속 여부
		yn = confirm('계속하시겠습니까??')
		
		if(!yn) break;
	
	}
}
</script>
</head>
<body>
<div class="box">
  <h3>구구단 입력 - 출력하기</h3>
  
  <input type="button" value="확인" onclick="proc1()">
  <br><br>
  <div id="result1"></div>
</div>


<div class="box">
  <h3>구구단 입력 - 출력하기<br>
  confirm함수를 이용해서 계속 여부 판단</h3>
  
  <input type="button" value="확인" onclick="proc2()">
  <br><br>
  <div id="result2"></div>
</div>
</body>
</html>