<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>

<script>
const proc1 = function(){
	//HtmlCollection를 리턴 - forEach를 이용한 반복처리 불가능
	ptag= document.getElementsByTagName('p');
	console.log(ptag);
	
	for(i=0;i<ptag.length;i++){
		ptag[i].style.color = 'red';
	} 
	
	/* // 오류발생
	ptag.forEach(function(item){
		item.style.color='red';
	}) */
	
	
// 	ptag = document.querySelector('p');
// 	console.log(ptag);
	
	//NodeList를 리턴 - forEach를 이용한 반복처리 가능
	ptag = document.querySelectorAll('p');
	console.log(ptag);
	/* for(i=0;i<ptag.length;i++){
		ptag[i].style.color = 'blue';
	}  */
	ptag.forEach(function(i){
		i.style.color = 'green';
	}) 
	
}
</script>
</head>
<body>
<input type="button" value="확인" onclick="proc1()">
<p>무궁화 꽃이 피었습니다</p>
<p>능소화 꽃이 피었습니다</p>
