}
//출력 함수
const arrPrint = function(fr, out){
// 	document.getElementById(out).innerText = fr;
	let str="";
	/* for(i=0; i<fr.length; i++){
		str += fr[i] + "&nbsp;&nbsp;&nbsp;"
	} */
	fr.forEach(function(ff){
		str += ff + "&nbsp;&nbsp;&nbsp;"
	})
	document.getElementById(out).innerHTML = str;
}

const proc2 = function(){
	
	const fruit = [];
	fruit[0] = "수박";
	fruit[1] = "파인애플";
	fruit[2] = "망고";
	fruit[3] = "딸기";
	fruit[4] = "자두";
	
	//출력 함수 호출
	arrPrint(fruit, 'result2');
}
