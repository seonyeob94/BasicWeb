<script type="text/javascript">
const proc1 = () =>{
	dan = prompt("구구단 입력", "2~99")
	let res="";
	for(let i=1; i<10;i++){
		res += `${dan} * ${i} =${dan*i}<br>`
	}
	//id=result1 검색 - 출력
	document.getElementById('result1').innerHTML = res;
}
</script>
</head>
<body>
<div class="box">
  <h3>구구단 입력 - 출력하기</h3>
  
  <input type="button" value="확인" onclick="proc1()">
  <br><br>
  <div id="result1"></div>
</div>


