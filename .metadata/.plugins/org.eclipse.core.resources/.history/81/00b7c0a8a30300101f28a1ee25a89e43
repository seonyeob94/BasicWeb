<title>Insert title here</title>
<link rel="stylesheet" href="../css/public.css">
<script type="text/javascript">
const sum = (...args) => {
	//...args : 갯수가 정해지지 않은 값들을 받는 배열변수
	
	//args변수에 대입된 값들의 총 합을 구한다
	let total = 0;
	
	for(i=0;i<args.length;i++){
		total+= args[i];
	}
	//출력내용
	res = `[${args}] ->total = ${total}<br>`
	return res;
	
	//document.getElementById('result1').innerHTML=res;
}
const proc1 = () =>{
	
	res1 = sum(23,56);
	
   	res2 = sum(12,56,78,90);
	
	res3 = sum(34,56,78,99,198,213);
	
	str = `${res1}<br>`;
	str += `${res2}<br>`;
	str += `${res3}<br>`;
	document.getElementById('result1').innerHTML = str;
}
const myFun =(a, b, ...args)=>{
	//출력모양 만들기
	str = `a = ${a} b= ${b} <br>`;
	str += `args = [${args}] <br>`;
	
	return str;
}

const proc2 = () =>{
	result2 = document.getElementById("result2");
	
	res = myFun("one", "two", "three", "four", "five", "six");
	printRes()
	
	res = myFun("one", "two", "three");
	printRes()

	res = myFun("one", "two");
	printRes()
}

const printRes = () =>{
	result2.innerHTML +=res;
} 
</script>
</head>
<body>
<div class="box">
  <h3>나머지 매개변수<br>
  갯수가 정해지지 않은 값들을 받는 배열변수
  sum(...args)
  </h3>
  
  <input type="button" value="확인" onclick="proc1()">
  <br><br>
  <div id="result1"></div>
</div>

<div class="box">
  <h3>나머지 매개변수<br>
  함수에 한번만, 마지막에 올 수 있다<br>
  myFun(a, b, ...args)
  </h3>
  
  <input type="button" value="확인" onclick="proc2()">
  <br><br>
  <div id="result2"></div>
</div>
</body>
