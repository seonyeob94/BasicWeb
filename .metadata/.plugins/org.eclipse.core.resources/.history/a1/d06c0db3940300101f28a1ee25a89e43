<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/public.css">
<script type="text/javascript">
//const calc = function(op){}

const calc= (op) =>{
	
	//op변수는 함수 호출시에 값을 받은 매개변수, 파라미터변수, 지역변수
	//+,-,/,* 중에 하나가 대입한다
	
	//id=x인 요소 접근-값 가져오기 -String리턴
	vx= parseInt(document.getElementById('x').value);
	
	//id=y인 요소 접근-값 가져오기 -String리턴
	vy=  parseInt(document.getElementById('y').value);
	
	
	switch(op){
	case "+" :
		res = vx+vy;
		break;
	case "-" :
		res = vx-vy;
		break;
	case "/" :
		res = vx/vy;
		res = res.toFixed(2);
		break;
	case "*" :
		res = vx*vy;
		res = res.toLocaleString();
		break;
	}
	
	//출력
	//id=sum인 요소 검색- 출력 - value
	
	document.getElementById('sum').value=res;

	//id=sp1요소 검색 - vx값을 출력 - innerText
	document.getElementById('sp1').innerText=vx;

	//id=sp2요소 검색 - vy값을 출력 - innerText
	document.getElementById('sp2').innerText=vy;
	//id=sp3요소 검색 - res값을 출력 - innerText
	document.getElementById('sp3').innerText=res;
}
</script>
</head>
<body>

<div class="box">
  <h3></h3>
  <form>
    첫번째 :<input id="x"><br>
    두번째 :<input id="y"><br>
    결과 :<input id="sum"><br>
    <br>
    <input type="button" onclick="calc('+')" value="+">
    <input type="button" onclick="calc('-')" value="-">
    <input type="button" onclick="calc('*')" value="*">
    <input type="button" onclick="calc('/')" value="/"><br>
    <p>첫번째 값 :<span id="sp1"></span> </p>
    <p>두번째 값 :<span id="sp2"></span> </p>
    <p>결과 :<span id="sp3"></span> </p>
  </form>
</div>


</body>
</html>